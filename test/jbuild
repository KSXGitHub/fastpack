(executable
 ((name test_runner)
  (modules (test_runner))
  (libraries (FastpackTest ppx_expect.evaluator ppx_inline_test.runner.lib))))

(alias
 ((name    runtest)
  (deps    (test_runner.exe))
  (action  (chdir ${ROOT} (run ${<} inline-test-runner FastpackTest -diff-cmd  "git --no-pager diff --no-index --color")))))

(alias
 ((name    only)
  (deps    (test_runner.exe))
  (action  (chdir ${ROOT} (run ${<} inline-test-runner FastpackTest -diff-cmd  "git --no-pager diff --no-index --color" -verbose -only-test Pack_builtins_flat_prod.ml )))))
